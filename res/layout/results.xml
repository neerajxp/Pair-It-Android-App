<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgoundresult"
    android:orientation="vertical"    
      android:gravity="center" 
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="0dp"    
    android:layout_weight="0.14"   	    
    android:orientation="vertical"    
    android:gravity="center"
    android:background="@android:color/transparent"
     >
     </LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="0dp"    
    android:layout_weight="0.2"   	    
    android:orientation="vertical"    
    android:gravity="center"
    android:background="@android:color/transparent"
     >
   		<ImageView 
        android:id="@+id/imageviestars"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"               
        android:src="@drawable/excellentstars"
   		 />
           
		<ImageView 
        android:id="@+id/imageviewhorizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"       
        android:layout_marginTop="2dp"         
        android:src="@drawable/horizontallineorange"
   		 />
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="0dp"    
    android:layout_weight="0.2"  
    android:orientation="horizontal"    
    android:gravity="center"
    android:background="@android:color/transparent"
     >
		   <TextView
        android:id="@+id/textViewtarget11"
        android:layout_width="0dp"
		android:layout_height="100dp"    
   		android:layout_weight="0.12"                           
        android:textColor="@color/red"
        android:textSize="14dp"        	
         />    
    	<ImageView 
        android:id="@+id/imageviewman"
        android:layout_width="0dp"
		android:layout_height="match_parent"    
   		android:layout_weight="0.3"    
   		android:layout_gravity="right"           
        android:src="@drawable/ic_launcher"/>          
         <TextView
        android:id="@+id/textViewscore"
        android:layout_width="0dp"
		android:layout_height="match_parent"    
   		android:layout_weight="0.3"      
        android:text="TextView"
        android:textSize="17dp"    
        android:layout_gravity="left"         
        android:layout_marginLeft="2dp"        
        android:textColor="@color/blue"
         />
            <TextView
        android:id="@+id/textViewtarget111"
        android:layout_width="0dp"
		android:layout_height="100dp"    
   		android:layout_weight="0.11"                           
        android:textColor="@color/red"
        android:textSize="14dp"        	
         />    
    		
</LinearLayout>
<ImageView 
        android:id="@+id/imageviewhorizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"               
        android:layout_marginTop="10dp"             
        android:src="@drawable/horizontallineorange"
   		 />
 <TextView
        android:id="@+id/textViewNexttarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:text="Next Target: "                
        android:textSize="17dp"        	        
        android:gravity="center_horizontal"
        android:textColor="@color/brown"        
         />   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="wrap_content"        
    android:orientation="horizontal"
    android:background="@android:color/transparent"
    android:layout_marginTop="10dp" 
    android:gravity="center_horizontal"
     >                    
  <TextView
        android:id="@+id/textViewtargetstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="Finish in "
        android:layout_marginLeft="10dp"        
        android:textColor="@color/blue"
        android:textSize="12dp"        
         />   
          <TextView
        android:id="@+id/textViewtarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="45"               
        android:textColor="@color/red"
        android:textSize="15dp"        	
         />   
          <TextView
             android:id="@+id/textViewmovesnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text=" moves"         
        android:textColor="@color/blue"
        android:textSize="14dp"        
         />    
                 
</LinearLayout>  
          <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"	   
    android:layout_height="wrap_content"      	
    android:orientation="horizontal"
    android:background="@android:color/transparent"    
    android:gravity="center_horizontal"
     >
          <TextView
        android:id="@+id/textViewtargettobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text=" to get "               
        android:textColor="@color/blue"
        android:textSize="14dp"               
         />     
          <TextView
        android:id="@+id/textViewtargetlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="3 starts (excellent)"               
        android:textColor="@color/red"
        android:textSize="14dp"        
         />  
          
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="0dp"    
    android:layout_weight="0.12"   	
    android:orientation="horizontal"
    android:background="@android:color/transparent"    
    android:gravity="center_horizontal"
     >

    <Button
        android:id="@+id/button1"
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="40dp"        
        android:background="@drawable/ok"
        android:gravity="center_horizontal"
        android:onClick="RePlay" />

    </LinearLayout>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="0dp"    
    android:layout_weight="0.13"   	    
    android:orientation="vertical"    
    android:gravity="center"
    android:background="@android:color/transparent"
     >
     </LinearLayout>
</LinearLayout>
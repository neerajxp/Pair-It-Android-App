<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="290dp"
    android:orientation="vertical"
    android:background="@android:color/white" 
    android:gravity="center_horizontal"    
     >       
		<ImageView 
        android:id="@+id/imageviestars"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"               
        android:src="@drawable/excellentstars"
   		 />
           
		<ImageView 
        android:id="@+id/imageviewhorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"       
        android:layout_marginTop="2dp" 
        android:src="@drawable/horizontallineorange"
   		 />
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white" 
    android:gravity="center"
     >
    	<ImageView 
        android:id="@+id/imageviewman"
        android:layout_width="130dp"
        android:layout_height="130dp"                
        android:src="@drawable/ic_launcher"/>          
         <TextView
        android:id="@+id/textViewscore"
        android:layout_width="wrap_content"
        android:layout_height="50dp"        
        android:text="TextView"
        android:textSize="13dp"          
        android:layout_marginLeft="10dp"        
        android:textColor="@color/blue"
         />
          
    		
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_marginTop="5dp" 
    android:gravity="left"
     >
  <TextView
        android:id="@+id/textViewtargetstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="Finish in "
        android:layout_marginLeft="10dp"        
        android:textColor="@color/blue"
        android:textSize="12dp"        
         />   
          <TextView
        android:id="@+id/textViewtarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="45"               
        android:textColor="@color/red"
        android:textSize="14dp"        	
         />    
          <TextView
        android:id="@+id/textViewtargettobe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text=" moves to become "               
        android:textColor="@color/blue"
        android:textSize="12dp"               
         />     
          <TextView
        android:id="@+id/textViewtargetlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:text="excellent "               
        android:textColor="@color/red"
        android:textSize="14dp"        
         />  
</LinearLayout>
          <Button        
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="40dp"  
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"                   
        android:background="@drawable/replay3"                      
        android:onClick="testt"
        />
</LinearLayout>